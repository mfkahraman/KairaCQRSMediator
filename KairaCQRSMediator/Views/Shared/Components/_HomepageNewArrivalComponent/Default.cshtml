@*
    _HomepageNewArrivalComponent
*@

@model List<GetProductsQueryResult>

<section id="new-arrival" class="new-arrival product-carousel py-5 position-relative overflow-hidden">
    <div class="container">
        <div class="d-flex flex-wrap justify-content-between align-items-center mt-5 mb-3">
            <h4 class="text-uppercase">Yeni Gelen Ürünler</h4>
            <a href="/Urunler" class="btn-link">Tüm Ürünleri Görüntüle</a>
        </div>
        <div class="swiper product-swiper open-up" data-aos="zoom-out">
            <div class="swiper-wrapper d-flex">
                @foreach (var product in Model)
                {
                    <div class="swiper-slide">
                        <div class="product-item image-zoom-effect link-effect">
                            <div class="image-holder position-relative">
                                <a href="/Product/Details/@product.Id">
                                    <img src="@product.ImageUrl" alt="@product.Name" class="product-image img-fluid" />
                                </a>
                                <a href="/Favoriler/Ekle/@product.Id" class="btn-icon btn-wishlist">
                                    <svg width="24" height="24" viewBox="0 0 24 24">
                                        <use xlink:href="#heart"></use>
                                    </svg>
                                </a>
                                <div class="product-content">
                                    <h5 class="text-uppercase fs-5 mt-3">
                                        <a href="/Product/Details/product.Id">@product.Name</a>
                                    </h5>
                                    <a href="/Sepet/Ekle/@product.Id" class="text-decoration-none" data-after="Sepete Ekle">
                                        <span>@product.Price.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="swiper-pagination"></div>
        </div>
        <div class="icon-arrow icon-arrow-left">
            <svg width="50" height="50" viewBox="0 0 24 24">
                <use xlink:href="#arrow-left"></use>
            </svg>
        </div>
        <div class="icon-arrow icon-arrow-right">
            <svg width="50" height="50" viewBox="0 0 24 24">
                <use xlink:href="#arrow-right"></use>
            </svg>
        </div>
    </div>
</section>
