@model List<GetCategoryQueryResult>

@{
    ViewData["Title"] = "Index";
}

<h3>Kategoriler</h3>
@{
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Düzenle</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }
</table>
<a href="#" class="btn btn-primary">Yeni Kategori</a>