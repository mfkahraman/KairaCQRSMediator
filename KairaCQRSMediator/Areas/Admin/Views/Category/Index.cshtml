@model List<GetCategoryQueryResult>

@{
    ViewData["Title"] = "Index";
}

<h3>Kategoriler</h3>
@{
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>
                <a asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-primary">Güncelle</a>
                <a asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }
</table>
<a asp-action="CreateCategory" class="btn btn-primary">Yeni Kategori</a>