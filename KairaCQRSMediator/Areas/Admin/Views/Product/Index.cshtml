@model List<GetProductsQueryResult>

@{
    ViewData["Title"] = "Products";
}

<h3>Ürünler</h3>
@{
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Ürün Fotoğrafı</th>
        <th>Ürün Adı</th>
        <th>Ürün Fiyatı</th>
        <th>Ürün Kategorisi</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" class="img-thumbnail" /></td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.CategoryId</td>
            <td>
                <a asp-area="Admin" asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.Id" class="btn btn-primary">Güncelle</a>
                <a asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }
</table>
<a asp-action="CreateProduct" class="btn btn-primary">Yeni Ürün</a>